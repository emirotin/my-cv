---
import Layout from "../layouts/Layout.astro";

import TailwindAnimation from "../components/TailwindAnimation";
import ThemeSwitcher from "../components/ThemeSwitcher";

import "./tailwind.css";
---

<Layout>
  <Fragment slot="custom-head">
    <style>
      :root {
        --light-fg-color: rgb(100, 116, 139);
        --light-bg-color: rgb(255, 255, 255);
        --dark-fg-color: rgb(148, 163, 184);
        --dark-bg-color: rgb(15, 23, 42);
        --bg-color: var(--dark-bg-color);
        --fg-color: var(--dark-fg-color);

        color-scheme: light dark;
        background-color: var(--bg-color);
      }

      .hero {
        color: var(--fg-color);

        font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
      }

      @media (prefers-color-scheme: light) {
        :root {
          --bg-color: var(--light-bg-color);
        }

        .hero {
          --fg-color: var(--light-fg-color);
        }
      }
    </style>

    <script is:inline>
      (function () {
        const cl = document.documentElement.classList;

        if (localStorage.theme === "light") {
          cl.add("is-light");
        } else if (localStorage.theme === "dark") {
          cl.add("is-dark");
        }
      })();
    </script>
  </Fragment>

  <div class="absolute top-4 right-4">
    <ThemeSwitcher client:load />
  </div>

  <article class="hero h-full flex items-center justify-center">
    <h1 class="text-[10rem] flex items-center">
      <span>Eugene&nbsp;+</span>
      <TailwindAnimation />
      <span>=&nbsp;?</span>
    </h1>
  </article>

  <article class="prose prose-slate dark:prose-invert">
    <h1>TEST</h1>
  </article>
</Layout>
